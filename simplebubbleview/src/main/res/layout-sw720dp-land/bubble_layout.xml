<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/window_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:src="#8a000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cancel_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_max="200dp"
        android:alpha="0"
        android:src="@drawable/gradient_bubble"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="540:225"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:alpha="1" />


    <ImageView
        android:id="@+id/bubble"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/bubble_background"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:alpha="1"
        />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="58dp"
        android:layout_height="10dp"
        android:layout_marginEnd="16dp"
        android:paddingStart="24dp"
        android:paddingTop="4dp"
        android:paddingEnd="24dp"
        android:scaleType="centerCrop"
        android:src="@drawable/arrow_bubble"
        android:tint="@android:color/darker_gray"
        android:alpha="0"
        app:layout_constraintDimensionRatio="18:9"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:alpha="1"
        />

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:alpha="0"
        android:src="@drawable/cancel_icon_bubble"
        app:layout_constraintBottom_toBottomOf="@+id/cancel_background"
        app:layout_constraintEnd_toEndOf="@+id/cancel_background"
        app:layout_constraintStart_toStartOf="@+id/cancel_background"
        app:layout_constraintTop_toTopOf="@+id/cancel_background"
        app:layout_constraintVertical_bias="0.20"
        tools:alpha="1" />

</androidx.constraintlayout.widget.ConstraintLayout>